<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homeworks.homework3.Home3MainActivity">

    <EditText
        android:id="@+id/etHW3n1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/bober"
        android:textColor="@color/orange"
        app:layout_constraintEnd_toStartOf="@+id/btHW3load"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".2"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".8"

        />

    <Button
        android:id="@+id/btHW3load"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:onClick="loadImage"
        app:layout_constraintBottom_toTopOf="@id/imageHW3n1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".2"
        android:text="@string/load"
        android:textColor="@color/orange"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".2"/>

    <ImageView
        android:id="@+id/imageHW3n1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etHW3n1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".8"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="1"
        />


</android.support.constraint.ConstraintLayout>